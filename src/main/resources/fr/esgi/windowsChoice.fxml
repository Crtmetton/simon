<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.esgi.PrimaryController"
      alignment="CENTER" spacing="10">
    <Label text="Entrez les noms des joueurs" style="-fx-font-size: 20;" />
    <HBox spacing="5" visible="${isMulti}">
        <Label text="Nombre de joueurs :" />
        <TextField fx:id="playerCountField" promptText="2 à 4" />
    </HBox>
    <VBox fx:id="playerFieldsContainer" spacing="5">
        <!-- Placez ici des éléments comme des champs de texte pour les joueurs -->
    </VBox>
    <Button text="Valider" fx:id="validateButton"/>
</VBox>
